    <script>
      function closeMessage(messageId) {
        const message = document.getElementById(messageId);
        if (!message) {
          return;
        }

        message.style.opacity = "0";
        message.style.transform = "translateX(100%)";
        setTimeout(() => {
          message.remove();
        }, 300);
      }

      window.closeMessage = closeMessage;

      (function () {
        const THEME_KEY = "app-theme";
        const root = document.documentElement;
        const body = document.body;
        const navbar = document.getElementById("navbar");
        const mobileMenuBtn = document.getElementById("mobile-menu-btn");
        const mobileMenu = document.getElementById("mobile-menu");
        const themeToggleButtons = document.querySelectorAll("[data-theme-toggle]");
        const desktopThemeIcon = document.getElementById("theme-icon-desktop");
        const desktopThemeLabel = document.getElementById("theme-label-desktop");
        const mobileThemeIcon = document.getElementById("theme-icon-mobile");

        function getPreferredTheme() {
          try {
            const savedTheme = localStorage.getItem(THEME_KEY);
            if (savedTheme === "dark" || savedTheme === "light") {
              return savedTheme;
            }
          } catch (error) {
            // Ignore storage failure and fallback to media query.
          }

          return window.matchMedia &&
            window.matchMedia("(prefers-color-scheme: dark)").matches
            ? "dark"
            : "light";
        }

        function saveTheme(theme) {
          try {
            localStorage.setItem(THEME_KEY, theme);
          } catch (error) {
            // Ignore storage failure.
          }
        }

        function updateThemeControls(theme) {
          const isDark = theme === "dark";

          if (desktopThemeIcon) {
            desktopThemeIcon.classList.toggle("fa-sun", isDark);
            desktopThemeIcon.classList.toggle("fa-moon", !isDark);
          }

          if (mobileThemeIcon) {
            mobileThemeIcon.classList.toggle("fa-sun", isDark);
            mobileThemeIcon.classList.toggle("fa-moon", !isDark);
          }

          if (desktopThemeLabel) {
            desktopThemeLabel.textContent = isDark ? "Light" : "Dark";
          }
        }

        function updateNavbarAppearance(scrollY) {
          if (!navbar) {
            return;
          }

          const isDark = root.classList.contains("dark-mode");
          const isScrolled = scrollY > 50;

          navbar.classList.toggle("shadow-xl", isScrolled);
          navbar.classList.toggle("shadow-lg", !isScrolled);

          if (isDark) {
            navbar.style.backgroundColor = isScrolled
              ? "rgba(2, 6, 23, 0.95)"
              : "rgba(15, 23, 42, 0.86)";
          } else {
            navbar.style.backgroundColor = isScrolled
              ? "rgba(255, 255, 255, 0.98)"
              : "rgba(255, 255, 255, 0.95)";
          }
        }

        function applyTheme(theme) {
          const isDark = theme === "dark";
          root.classList.toggle("dark-mode", isDark);
          body.classList.toggle("dark-mode", isDark);
          updateThemeControls(theme);
          updateNavbarAppearance(window.scrollY);
        }

        function toggleTheme() {
          const nextTheme = root.classList.contains("dark-mode")
            ? "light"
            : "dark";
          applyTheme(nextTheme);
          saveTheme(nextTheme);
        }

        function setMobileMenuOpen(isOpen) {
          if (!mobileMenu || !mobileMenuBtn) {
            return;
          }

          const icon = mobileMenuBtn.querySelector("i");
          if (!icon) {
            return;
          }

          if (isOpen) {
            mobileMenu.classList.remove("hidden");
            setTimeout(() => {
              mobileMenu.style.opacity = "1";
              mobileMenu.style.transform = "translateY(0)";
            }, 10);
            icon.classList.remove("fa-bars");
            icon.classList.add("fa-times");
          } else {
            mobileMenu.style.opacity = "0";
            mobileMenu.style.transform = "translateY(-10px)";
            setTimeout(() => {
              mobileMenu.classList.add("hidden");
            }, 200);
            icon.classList.remove("fa-times");
            icon.classList.add("fa-bars");
          }
        }

        const initialTheme = root.classList.contains("dark-mode")
          ? "dark"
          : getPreferredTheme();
        applyTheme(initialTheme);

        themeToggleButtons.forEach((button) => {
          button.addEventListener("click", toggleTheme);
        });

        const successMessage = document.getElementById("success-message");
        const errorMessage = document.getElementById("error-message");

        if (successMessage) {
          setTimeout(() => {
            closeMessage("success-message");
          }, 5000);
        }

        if (errorMessage) {
          setTimeout(() => {
            closeMessage("error-message");
          }, 7000);
        }

        if (mobileMenuBtn && mobileMenu) {
          mobileMenuBtn.addEventListener("click", function (event) {
            event.stopPropagation();
            setMobileMenuOpen(mobileMenu.classList.contains("hidden"));
          });
        }

        document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
          anchor.addEventListener("click", function (event) {
            event.preventDefault();
            const target = document.querySelector(this.getAttribute("href"));
            if (!target) {
              return;
            }

            if (mobileMenu && !mobileMenu.classList.contains("hidden")) {
              setMobileMenuOpen(false);
            }

            const offsetTop =
              target.offsetTop - (window.innerWidth < 768 ? 80 : 100);
            window.scrollTo({
              top: offsetTop,
              behavior: "smooth",
            });
          });
        });

        document.addEventListener("click", function (event) {
          if (!mobileMenu || !mobileMenuBtn) {
            return;
          }

          if (
            !mobileMenuBtn.contains(event.target) &&
            !mobileMenu.contains(event.target) &&
            !mobileMenu.classList.contains("hidden")
          ) {
            setMobileMenuOpen(false);
          }
        });

        if (navbar) {
          navbar.style.transform = "translateY(0)";
        }

        window.addEventListener("scroll", function () {
          const currentScrollY = window.scrollY;
          updateNavbarAppearance(currentScrollY);

          if (navbar) {
            navbar.style.transform = "translateY(0)";
          }
        });

        let touchStartY = 0;
        let touchEndY = 0;

        document.addEventListener("touchstart", function (event) {
          touchStartY = event.changedTouches[0].screenY;
        });

        document.addEventListener("touchend", function (event) {
          touchEndY = event.changedTouches[0].screenY;
          const swipeThreshold = 50;
          const diff = touchStartY - touchEndY;

          if (Math.abs(diff) > swipeThreshold && navigator.vibrate) {
            navigator.vibrate(10);
          }
        });

        const carouselTrack = document.getElementById("carouselTrack");
        const prevBtn = document.getElementById("prevBtn");
        const nextBtn = document.getElementById("nextBtn");
        const dots = document.querySelectorAll(".carousel-dot");
        const carouselContainer = document.querySelector(".carousel-container");
        const autoPlayIndicator = document.querySelector(".text-center.mt-4");
        const autoPlayText = autoPlayIndicator
          ? autoPlayIndicator.querySelector("span")
          : null;
        const autoPlayDot = autoPlayIndicator
          ? autoPlayIndicator.querySelector(".w-2")
          : null;

        if (carouselTrack && prevBtn && nextBtn && dots.length && carouselContainer) {
          let currentSlide = 0;
          const totalSlides = dots.length;
          let autoPlayInterval;
          let isAutoPlaying = true;
          let startX = 0;
          let endX = 0;

          function updateAutoPlayIndicator(paused) {
            if (!autoPlayText || !autoPlayDot) {
              return;
            }

            if (paused) {
              autoPlayText.textContent = "Auto-play dijeda - klik untuk lanjut";
              autoPlayDot.classList.remove("animate-pulse", "bg-emerald-400");
              autoPlayDot.classList.add("bg-red-400");
            } else {
              autoPlayText.textContent = "Auto-play aktif - klik untuk jeda";
              autoPlayDot.classList.add("animate-pulse", "bg-emerald-400");
              autoPlayDot.classList.remove("bg-red-400");
            }
          }

          function updateCarousel() {
            const translateX = -currentSlide * 100;
            carouselTrack.style.transform = `translateX(${translateX}%)`;

            dots.forEach((dot, index) => {
              if (index === currentSlide) {
                dot.classList.remove("bg-white/50");
                dot.classList.add("bg-white", "scale-125");
              } else {
                dot.classList.remove("bg-white", "scale-125");
                dot.classList.add("bg-white/50");
              }
            });
          }

          function nextSlide() {
            currentSlide = (currentSlide + 1) % totalSlides;
            updateCarousel();
          }

          function prevSlide() {
            currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
            updateCarousel();
          }

          function goToSlide(slideIndex) {
            currentSlide = slideIndex;
            updateCarousel();
          }

          function startAutoPlay() {
            clearInterval(autoPlayInterval);
            autoPlayInterval = setInterval(nextSlide, 5000);
            isAutoPlaying = true;
            updateAutoPlayIndicator(false);
          }

          function stopAutoPlay() {
            clearInterval(autoPlayInterval);
            isAutoPlaying = false;
            updateAutoPlayIndicator(true);
          }

          prevBtn.addEventListener("click", () => {
            prevSlide();
            stopAutoPlay();
          });

          nextBtn.addEventListener("click", () => {
            nextSlide();
            stopAutoPlay();
          });

          dots.forEach((dot, index) => {
            dot.addEventListener("click", () => {
              goToSlide(index);
              stopAutoPlay();
            });
          });

          carouselContainer.addEventListener("mouseenter", stopAutoPlay);
          carouselContainer.addEventListener("mouseleave", () => {
            if (!isAutoPlaying) {
              startAutoPlay();
            }
          });

          carouselContainer.addEventListener("touchstart", (event) => {
            startX = event.touches[0].clientX;
          });

          carouselContainer.addEventListener("touchend", (event) => {
            endX = event.changedTouches[0].clientX;
            const swipeThreshold = 50;
            const diff = startX - endX;

            if (Math.abs(diff) <= swipeThreshold) {
              return;
            }

            if (diff > 0) {
              nextSlide();
            } else {
              prevSlide();
            }
            stopAutoPlay();
          });

          document.addEventListener("keydown", (event) => {
            if (event.key === "ArrowLeft") {
              prevSlide();
              stopAutoPlay();
            } else if (event.key === "ArrowRight") {
              nextSlide();
              stopAutoPlay();
            }
          });

          if (autoPlayIndicator) {
            autoPlayIndicator.addEventListener("click", () => {
              if (isAutoPlaying) {
                stopAutoPlay();
              } else {
                startAutoPlay();
              }
            });
          }

          updateCarousel();
          startAutoPlay();
        }
      })();
    </script>
  </body>
