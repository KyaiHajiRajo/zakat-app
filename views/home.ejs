<!DOCTYPE html>
<html lang="id" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/images/logo-dkm.png" type="image/x-icon" />
    <title>Musholla Nurul Fitrah</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: {
                50: "#f0f9ff",
                100: "#e0f2fe",
                200: "#bae6fd",
                300: "#7dd3fc",
                400: "#38bdf8",
                500: "#0ea5e9",
                600: "#0284c7",
                700: "#0369a1",
                800: "#075985",
                900: "#0c4a6e",
              },
            },
          },
        },
      };
    </script>
    <script>
      (function () {
        const storageKey = "app-theme";
        let theme = null;

        try {
          theme = localStorage.getItem(storageKey);
        } catch (error) {
          theme = null;
        }

        const prefersDark =
          window.matchMedia &&
          window.matchMedia("(prefers-color-scheme: dark)").matches;
        const shouldUseDark = theme === "dark" || (!theme && prefersDark);

        if (shouldUseDark) {
          document.documentElement.classList.add("dark-mode");
        }
      })();
    </script>

    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />

    <!-- Custom CSS -->
    <style>
      .gradient-bg {
        background: linear-gradient(
          135deg,
          #059669 0%,
          #0d9488 50%,
          #0891b2 100%
        );
      }
      .islamic-pattern {
        background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M30 30c0-11.046-8.954-20-20-20s-20 8.954-20 20 8.954 20 20 20 20-8.954 20-20zm0 0c0 11.046 8.954 20 20 20s20-8.954 20-20-8.954-20-20-20-20 8.954-20 20z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
      }
      .floating-animation {
        animation: floating 3s ease-in-out infinite;
      }
      @keyframes floating {
        0%,
        100% {
          transform: translateY(0px);
        }
        50% {
          transform: translateY(-10px);
        }
      }
      .fade-in {
        animation: fadeIn 1s ease-in;
      }
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      .glass-effect {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.3);
      }
      .islamic-glow {
        animation: islamicGlow 3s ease-in-out infinite alternate;
      }
      @keyframes islamicGlow {
        from {
          box-shadow: 0 0 30px rgba(16, 185, 129, 0.6),
            0 0 60px rgba(16, 185, 129, 0.4);
        }
        to {
          box-shadow: 0 0 40px rgba(16, 185, 129, 0.8),
            0 0 80px rgba(16, 185, 129, 0.6);
        }
      }
      .crescent-moon {
        position: relative;
      }
      .crescent-moon::before {
        content: "‚ò™Ô∏è";
        font-size: 1.2em;
        margin-right: 0.5rem;
      }
      .bismillah-text {
        font-family: "Times New Roman", serif;
        font-style: italic;
        color: #065f46;
        background: linear-gradient(45deg, #059669, #0d9488);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      .slide-up {
        animation: slideUp 0.8s ease-out;
      }
      @keyframes slideUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* ===============================
         CAROUSEL CUSTOM STYLES
         =============================== */
      .carousel-container {
        position: relative;
        background: linear-gradient(
          135deg,
          rgba(16, 185, 129, 0.15) 0%,
          rgba(13, 148, 136, 0.1) 100%
        );
        backdrop-filter: blur(20px);
        border: 1px solid rgba(16, 185, 129, 0.3);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
      }

      .carousel-track {
        transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .carousel-slide {
        background: linear-gradient(
          135deg,
          rgba(16, 185, 129, 0.1) 0%,
          rgba(13, 148, 136, 0.05) 100%
        );
      }

      .carousel-dot {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: pointer;
      }

      .carousel-dot:hover {
        transform: scale(1.2);
      }

      .carousel-dot.active {
        background: white !important;
        transform: scale(1.25);
      }

      /* Carousel button hover effects */
      #prevBtn:hover,
      #nextBtn:hover {
        background: rgba(255, 255, 255, 0.4);
        transform: scale(1.1);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
      }

      /* Card hover animations in carousel */
      .carousel-slide .bg-white\/10:hover {
        background: rgba(255, 255, 255, 0.15) !important;
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
      }

      /* Smooth transitions for all interactive elements */
      .carousel-slide .bg-gradient-to-br {
        transition: all 0.3s ease;
      }

      .carousel-slide .bg-gradient-to-br:hover {
        transform: scale(1.05) rotateZ(2deg);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
      }

      /* Auto-play indicator animation */
      .auto-play-indicator {
        animation: indicatorPulse 2s ease-in-out infinite;
      }

      @keyframes indicatorPulse {
        0%,
        100% {
          opacity: 0.7;
        }
        50% {
          opacity: 1;
        }
      }

      /* Responsive carousel adjustments */
      @media (max-width: 768px) {
        .carousel-slide {
          padding: 1rem !important;
        }

        .carousel-slide .grid {
          grid-template-columns: 1fr !important;
          gap: 2rem !important;
        }

        .carousel-slide .order-2 {
          order: 1 !important;
        }

        .carousel-slide .order-1 {
          order: 2 !important;
        }
      }

      /* ===============================
         END CAROUSEL CUSTOM STYLES
         =============================== */

      /* ===============================
         FLASH MESSAGE STYLES
         =============================== */
      #success-message,
      #error-message {
        animation: slideInRight 0.3s ease-out;
        transition: all 0.3s ease;
      }

      @keyframes slideInRight {
        from {
          opacity: 0;
          transform: translateX(100%);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      /* Flash message hover effects */
      #success-message:hover,
      #error-message:hover {
        transform: scale(1.02);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
      }

      /* ===============================
         END FLASH MESSAGE STYLES
         =============================== */

      /* ===============================
         ENHANCED MOBILE RESPONSIVENESS
         =============================== */
      @media (max-width: 640px) {
        .bismillah-text {
          font-size: 1.25rem !important;
          line-height: 1.8;
        }

        .floating-animation {
          animation-duration: 4s;
        }

        /* Mobile navigation improvements */
        nav .flex.flex-col span:first-child {
          font-size: 1rem;
        }

        /* Hero section mobile adjustments */
        #home {
          padding-top: 5rem;
          padding-bottom: 2rem;
        }

        /* Enhanced mobile typography */
        h1 {
          line-height: 1.2;
        }

        /* Button responsiveness */
        .group {
          min-height: 3rem;
        }

        #navbar .max-w-7xl {
          padding-left: 0.75rem;
          padding-right: 0.75rem;
        }

        #navbar .nav-main-row {
          min-height: 4.25rem;
          gap: 0.5rem;
        }

        #navbar .brand-title {
          max-width: 8.75rem;
        }

        #navbar .mobile-nav-actions {
          gap: 0.4rem;
        }

        #navbar .mobile-icon-btn {
          padding: 0.55rem;
        }
      }

      /* Font for Arabic text */
      .font-arabic {
        font-family: "Times New Roman", "Amiri", "Traditional Arabic", serif;
        font-weight: 600;
      }

      /* Enhanced gradient backgrounds */
      .gradient-bg {
        background: linear-gradient(
          135deg,
          #059669 0%,
          #0d9488 25%,
          #0891b2 50%,
          #0284c7 75%,
          #0369a1 100%
        );
        background-size: 300% 300%;
        animation: gradientShift 8s ease infinite;
      }

      @keyframes gradientShift {
        0%,
        100% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
      }

      /* Enhanced glass effect for mobile */
      @media (max-width: 768px) {
        .bg-white\/10,
        .bg-white\/15 {
          background: rgba(255, 255, 255, 0.2);
          backdrop-filter: blur(20px);
        }
      }

      /* Enhanced navbar blur effect */
      #navbar {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        width: 100%;
        transform: translateY(0);
      }

      nav.backdrop-blur-md {
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }

      /* Mobile menu animation styles */
      #mobile-menu {
        opacity: 0;
        transform: translateY(-10px);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: absolute;
        left: 0;
        right: 0;
        top: 100%;
        z-index: 49;
        background: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(18px);
        -webkit-backdrop-filter: blur(18px);
        border-top: 1px solid rgba(16, 185, 129, 0.15);
        border-bottom-left-radius: 1rem;
        border-bottom-right-radius: 1rem;
        box-shadow: 0 16px 40px rgba(15, 23, 42, 0.14);
        overflow: hidden;
      }

      #mobile-menu:not(.hidden) {
        opacity: 1;
        transform: translateY(0);
      }

      @supports not ((backdrop-filter: blur(1px))) {
        #mobile-menu {
          background: #ffffff;
        }
      }

      /* Mobile menu button animation */
      #mobile-menu-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 2.5rem;
        height: 2.5rem;
        padding: 0 !important;
        border-radius: 0.75rem;
        border: 1px solid rgba(16, 185, 129, 0.18);
        background: rgba(16, 185, 129, 0.08);
        color: #065f46;
        line-height: 1;
        box-shadow: 0 6px 18px rgba(15, 118, 110, 0.12);
        transition: all 0.2s ease;
      }

      #mobile-menu-btn:hover {
        background: rgba(16, 185, 129, 0.14);
        transform: translateY(-1px);
      }

      #mobile-menu-btn:active {
        transform: scale(0.95);
      }

      /* Icon rotation animation */
      #mobile-menu-btn i {
        width: 1rem;
        height: 1rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        line-height: 1;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }

      /* Smooth scrolling for mobile */
      html {
        scroll-behavior: smooth;
      }

      /* Enhanced hover effects for mobile touch */
      @media (hover: none) and (pointer: coarse) {
        .hover\:scale-105:hover {
          transform: scale(1.02);
        }

        .group:active {
          transform: scale(0.98);
        }
      }

      /* ===============================
         END ENHANCED MOBILE RESPONSIVENESS
         =============================== */

      /* ===============================
         DARK MODE
         =============================== */
      body {
        transition: background 0.35s ease, color 0.35s ease;
      }

      .theme-toggle-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.45rem;
        height: 2.5rem;
        padding: 0 0.85rem;
        border-radius: 0.75rem;
        border: 1px solid rgba(16, 185, 129, 0.18);
        background: rgba(16, 185, 129, 0.08);
        color: #065f46;
        font-weight: 700;
        line-height: 1;
        box-shadow: 0 6px 18px rgba(15, 118, 110, 0.12);
        transition: all 0.25s ease;
      }

      .theme-toggle-btn i {
        width: 1rem;
        height: 1rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        line-height: 1;
      }

      #theme-toggle-desktop {
        min-width: 5.5rem;
      }

      #theme-toggle-mobile {
        width: 2.5rem;
        height: 2.5rem;
        padding: 0 !important;
        border-radius: 0.75rem;
        flex-shrink: 0;
      }

      .theme-toggle-btn:hover {
        background: rgba(16, 185, 129, 0.14);
        transform: translateY(-1px);
      }

      .theme-toggle-btn:focus-visible {
        outline: 2px solid rgba(16, 185, 129, 0.6);
        outline-offset: 2px;
      }

      html.dark-mode {
        color-scheme: dark;
      }

      html.dark-mode body {
        background: radial-gradient(
            circle at 20% 0%,
            rgba(16, 185, 129, 0.14),
            transparent 36%
          ),
          linear-gradient(145deg, #020617 0%, #0f172a 45%, #111827 100%);
      }

      html.dark-mode .islamic-pattern {
        background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.025'%3E%3Cpath d='M30 30c0-11.046-8.954-20-20-20s-20 8.954-20 20 8.954 20 20 20 20-8.954 20-20zm0 0c0 11.046 8.954 20 20 20s20-8.954 20-20-8.954-20-20-20-20 8.954-20 20z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
      }

      html.dark-mode #navbar {
        border-color: rgba(16, 185, 129, 0.22) !important;
      }

      html.dark-mode #mobile-menu {
        background: rgba(15, 23, 42, 0.97) !important;
        border-color: rgba(16, 185, 129, 0.2) !important;
      }

      html.dark-mode #navbar a,
      html.dark-mode #mobile-menu a,
      html.dark-mode #navbar .text-gray-700,
      html.dark-mode #mobile-menu .text-gray-700 {
        color: #e2e8f0 !important;
      }

      html.dark-mode #navbar .brand-title {
        background: none !important;
        -webkit-background-clip: initial !important;
        background-clip: border-box !important;
        -webkit-text-fill-color: #f8fafc !important;
        color: #f8fafc !important;
        text-shadow: 0 1px 2px rgba(2, 6, 23, 0.45);
      }

      html.dark-mode #navbar a:hover,
      html.dark-mode #mobile-menu a:hover {
        color: #6ee7b7 !important;
      }

      html.dark-mode #mobile-menu a:hover {
        background: rgba(16, 185, 129, 0.12) !important;
      }

      html.dark-mode .theme-toggle-btn,
      html.dark-mode #mobile-menu-btn {
        background: rgba(16, 185, 129, 0.14) !important;
        border-color: rgba(16, 185, 129, 0.25) !important;
        color: #6ee7b7 !important;
      }

      html.dark-mode #features,
      html.dark-mode #quick-actions {
        background: linear-gradient(145deg, #0f172a 0%, #111827 100%) !important;
      }

      html.dark-mode #about {
        background: linear-gradient(145deg, #020617 0%, #0f172a 100%) !important;
      }

      html.dark-mode #features .bg-white,
      html.dark-mode #about .bg-white,
      html.dark-mode #quick-actions .bg-white,
      html.dark-mode #quick-actions .bg-white\/95 {
        background: rgba(15, 23, 42, 0.88) !important;
        border-color: rgba(148, 163, 184, 0.2) !important;
      }

      html.dark-mode .bg-emerald-100,
      html.dark-mode .bg-teal-100,
      html.dark-mode .bg-cyan-100,
      html.dark-mode .bg-amber-100,
      html.dark-mode .bg-rose-100,
      html.dark-mode .bg-indigo-100 {
        background: rgba(16, 185, 129, 0.15) !important;
      }

      html.dark-mode .text-gray-900 {
        color: #f8fafc !important;
      }

      html.dark-mode .text-gray-700 {
        color: #cbd5e1 !important;
      }

      html.dark-mode .text-gray-600,
      html.dark-mode .text-gray-400 {
        color: #94a3b8 !important;
      }

      html.dark-mode .text-emerald-600 {
        color: #6ee7b7 !important;
      }

      html.dark-mode .bg-gray-900 {
        background: #020617 !important;
      }

      html.dark-mode .border-gray-800 {
        border-color: rgba(148, 163, 184, 0.2) !important;
      }

      html.dark-mode #success-message {
        background: rgba(20, 83, 45, 0.95) !important;
        border-left-color: #22c55e !important;
        color: #bbf7d0 !important;
      }

      html.dark-mode #error-message {
        background: rgba(127, 29, 29, 0.95) !important;
        border-left-color: #ef4444 !important;
        color: #fecaca !important;
      }
      /* ===============================
         END DARK MODE
         =============================== */
    </style>
  </head>
