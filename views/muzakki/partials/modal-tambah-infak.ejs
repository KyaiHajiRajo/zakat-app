<!-- Modal Tambah Infak Batch -->
<div id="tambahInfakModal" class="modal-overlay-infak" style="display: none;">
  <div class="modal-container-infak">
    <!-- Modal Header -->
    <div class="modal-header-infak">
      <div class="modal-header-left">
        <div class="modal-icon-box">
          <i class="fas fa-hand-holding-heart"></i>
        </div>
        <div class="modal-title-box">
          <h3 class="modal-title">Tambah Infak Kembalian</h3>
          <p class="modal-subtitle">Pilih muzakki untuk mengkonversi kembalian menjadi infak</p>
        </div>
      </div>
      <button type="button" class="modal-close-btn" onclick="closeInfakModal()">
        <i class="fas fa-times"></i>
      </button>
    </div>

    <!-- Modal Body -->
    <div class="modal-body-infak">
      <!-- Search and Filter Section -->
      <div class="search-section-infak">
        <div class="search-box-infak">
          <i class="fas fa-search"></i>
          <input 
            type="text" 
            id="searchMuzakki" 
            placeholder="Cari nama muzakki..." 
            class="search-input-infak"
            onkeyup="filterMuzakki()"
          />
        </div>
        <div class="filter-stats">
          <span class="stat-badge stat-total">
            <i class="fas fa-users"></i>
            <span id="totalCount">0</span> Total
          </span>
          <span class="stat-badge stat-selected">
            <i class="fas fa-check-circle"></i>
            <span id="selectedCount">0</span> Dipilih
          </span>
        </div>
      </div>

      <!-- Select All Option -->
      <div class="select-all-box">
        <label class="checkbox-container-select-all">
          <input 
            type="checkbox" 
            id="selectAllCheckbox" 
            onchange="toggleSelectAll(this)"
          />
          <span class="checkbox-custom"></span>
          <span class="checkbox-label-bold">Pilih Semua</span>
        </label>
      </div>

      <!-- Muzakki List -->
      <form id="infakBatchForm" method="POST" action="/muzakki/rt/<%= rt.id %>/batch-infak">
        <div class="muzakki-list-infak" id="muzakkiList">
          <%
          // Filter muzakki: kembalian > 0 DAN belum ada infak
          const muzakkiForInfak = muzakki.filter(m => {
            const kembalianValue = parseFloat(m.kembalian || 0);
            const hasInfak = m.infak_id && m.infak_id !== null;
            return kembalianValue > 0 && !hasInfak;
          });

          if (muzakkiForInfak.length === 0) {
          %>
            <div class="empty-state-infak">
              <i class="fas fa-inbox"></i>
              <p>Tidak ada muzakki dengan kembalian yang belum di-infak-kan</p>
            </div>
          <% } else {
            muzakkiForInfak.forEach((item, index) => {
          %>
            <div class="muzakki-card-infak" data-nama="<%= item.nama_muzakki_list ? item.nama_muzakki_list.toLowerCase() : '' %>">
              <label class="muzakki-checkbox-label">
                <input
                  type="checkbox"
                  name="muzakki_ids[]"
                  value="<%= item.id %>"
                  class="muzakki-checkbox"
                  data-kembalian="<%= item.kembalian %>"
                  onchange="updateSelectedCount()"
                />
                <span class="checkbox-custom-card"></span>

                <div class="muzakki-info-card">
                  <div class="card-top">
                    <div class="card-name-section">
                      <h4 class="muzakki-name"><%= item.nama_muzakki_list || '-' %></h4>
                      <p class="card-subtitle">
                        <%= item.jumlah_muzakki %> jiwa â€¢ <%= new Date(item.created_at).toLocaleDateString('id-ID', { day: 'numeric', month: 'short' }) %>
                      </p>
                    </div>
                    <div class="card-amount">
                      <div class="amount-label">Kembalian</div>
                      <div class="amount-value">Rp <%= Math.floor(item.kembalian || 0).toLocaleString('id-ID') %></div>
                    </div>
                  </div>

                  <input
                    type="text"
                    name="keterangan_<%= item.id %>"
                    class="keterangan-input"
                    placeholder="Tambah keterangan..."
                  />
                </div>
              </label>
            </div>
          <%
            });
          }
          %>
        </div>

        <!-- Modal Footer / Actions -->
        <div class="modal-footer-infak">
          <div class="footer-summary">
            <div class="summary-item">
              <span class="summary-label">Total Kembalian Dipilih:</span>
              <span class="summary-value" id="totalKembalianSelected">Rp 0</span>
            </div>
          </div>
          <div class="footer-actions">
            <button type="button" class="btn-cancel-infak" onclick="closeInfakModal()">
              <i class="fas fa-times"></i>
              Batal
            </button>
            <button type="submit" class="btn-submit-infak" id="btnSubmitInfak" disabled>
              <i class="fas fa-paper-plane"></i>
              Simpan Infak (<span id="submitCount">0</span>)
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
