    <!-- SweetAlert2 Helper Functions -->
    <script>
      // Configure SweetAlert2 default settings
      const Toast = Swal.mixin({
        toast: true,
        position: 'top-end',
        showConfirmButton: false,
        timer: 3000,
        timerProgressBar: true,
        didOpen: (toast) => {
          toast.addEventListener('mouseenter', Swal.stopTimer)
          toast.addEventListener('mouseleave', Swal.resumeTimer)
        }
      });

      // Modern Alert function
      function showAlert(message, type = 'info', title = '') {
        const config = {
          title: title,
          text: message,
          icon: type,
          confirmButtonText: 'OK',
          confirmButtonColor: '#10b981',
          customClass: {
            popup: 'rounded-xl shadow-2xl',
            title: 'text-lg font-semibold text-gray-800',
            content: 'text-gray-600',
            confirmButton: 'px-6 py-2 rounded-lg font-medium'
          }
        };
        
        if (type === 'error') {
          config.confirmButtonColor = '#ef4444';
        } else if (type === 'warning') {
          config.confirmButtonColor = '#f59e0b';
        }
        
        return Swal.fire(config);
      }

      // Modern Confirm function
      function showConfirm(message, title = 'Konfirmasi', options = {}) {
        const defaultOptions = {
          title: title,
          text: message,
          icon: 'question',
          showCancelButton: true,
          confirmButtonText: options.confirmText || 'Ya, Lanjutkan',
          cancelButtonText: options.cancelText || 'Batal',
          confirmButtonColor: options.confirmColor || '#10b981',
          cancelButtonColor: '#6b7280',
          reverseButtons: true,
          customClass: {
            popup: 'rounded-xl shadow-2xl',
            title: 'text-lg font-semibold text-gray-800',
            content: 'text-gray-600',
            confirmButton: 'px-6 py-2 rounded-lg font-medium',
            cancelButton: 'px-6 py-2 rounded-lg font-medium'
          }
        };
        
        return Swal.fire({ ...defaultOptions, ...options });
      }

      // Success Toast
      function showSuccess(message, title = 'Berhasil!') {
        return Toast.fire({
          icon: 'success',
          title: title,
          text: message
        });
      }

      // Error Toast
      function showError(message, title = 'Error!') {
        return Toast.fire({
          icon: 'error',
          title: title,
          text: message
        });
      }

      // Warning Toast
      function showWarning(message, title = 'Peringatan!') {
        return Toast.fire({
          icon: 'warning',
          title: title,
          text: message
        });
      }

      // Info Toast
      function showInfo(message, title = 'Informasi') {
        return Toast.fire({
          icon: 'info',
          title: title,
          text: message
        });
      }

      // Loading/Progress Swal
      function showLoading(message = 'Memproses...', title = 'Mohon Tunggu') {
        return Swal.fire({
          title: title,
          text: message,
          allowOutsideClick: false,
          allowEscapeKey: false,
          showConfirmButton: false,
          didOpen: () => {
            Swal.showLoading();
          },
          customClass: {
            popup: 'rounded-xl shadow-2xl',
            title: 'text-lg font-semibold text-gray-800',
            content: 'text-gray-600'
          }
        });
      }

      // Delete confirmation with specific styling
      function showDeleteConfirm(itemName = '', message = '') {
        const text = message || `Apakah Anda yakin ingin menghapus ${itemName}? Tindakan ini tidak dapat dibatalkan.`;
        return showConfirm(text, 'Konfirmasi Hapus', {
          icon: 'warning',
          confirmText: 'Ya, Hapus',
          confirmColor: '#ef4444',
          cancelText: 'Batal'
        });
      }
