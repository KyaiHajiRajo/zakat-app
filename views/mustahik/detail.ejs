  .mustahik-detail-page .detail-hero p,
  .mustahik-detail-page .detail-hero a,
  .mustahik-detail-page .detail-hero i {
    color: #ffffff !important;
  }

  .mustahik-detail-page .detail-hero a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.35rem;
    height: 2.35rem;
    border-radius: 0.7rem;
    background: rgba(255, 255, 255, 0.18);
    border: 1px solid rgba(255, 255, 255, 0.3);
    transition: 0.2s ease;
  }

  .mustahik-detail-page .detail-hero a:hover {
    transform: translateX(-2px);
    background: rgba(255, 255, 255, 0.24);
  }

  .mustahik-detail-page .detail-layout {
    gap: 1.25rem;
  }

