    background: #ffffff;
    border-top: 1px solid #edf2f7;
    border-bottom: 1px solid #edf2f7;
  }

  .mustahik-detail-page .detail-table tbody td:first-child {
    border-left: 1px solid #edf2f7;
    border-top-left-radius: 0.65rem;
    border-bottom-left-radius: 0.65rem;
  }

  .mustahik-detail-page .detail-table tbody td:last-child {
    border-right: 1px solid #edf2f7;
    border-top-right-radius: 0.65rem;
    border-bottom-right-radius: 0.65rem;
  }

  .mustahik-detail-page .detail-table tbody tr {
    transition: background-color 0.25s ease;
  }

  .mustahik-detail-page .detail-table tbody tr:hover {
    background: #f8fafc;
  }

  .mustahik-detail-page .detail-table td,
  .mustahik-detail-page .detail-table th {
    vertical-align: top;
  }

  .mustahik-detail-page .detail-side .detail-card {
    position: sticky;
    top: 86px;
  }

  .mustahik-detail-page .detail-side .detail-card + .detail-card {
    position: static;
  }

  .mustahik-detail-page .detail-card-actions .btn-primary,
  .mustahik-detail-page .detail-card-actions .btn-secondary,
  .mustahik-detail-page .detail-card-actions .btn-danger {
    border-radius: 0.75rem;
    font-weight: 700;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .mustahik-detail-page .detail-card-actions .btn-primary {
    background: linear-gradient(135deg, #16a34a 0%, #0d9488 100%);
    color: #ffffff !important;
    border: none;
    box-shadow: 0 8px 18px rgba(16, 185, 129, 0.25);
  }

  .mustahik-detail-page .detail-card-actions .btn-secondary {
    border: 1px solid #d8e3ee;
    background: #f8fafc;
    color: #0f172a !important;
  }

  .mustahik-detail-page .detail-card-actions .btn-danger {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    color: #ffffff !important;
    border: none;
    box-shadow: 0 8px 18px rgba(239, 68, 68, 0.22);
  }

  .mustahik-detail-page .detail-card-actions .btn-primary:hover,
  .mustahik-detail-page .detail-card-actions .btn-secondary:hover,
  .mustahik-detail-page .detail-card-actions .btn-danger:hover {
    transform: translateY(-2px);
  }

  .mustahik-detail-page .detail-card-stats .space-y-4 > div {
    padding-bottom: 0.55rem;
    border-bottom: 1px dashed #e2e8f0;
  }

  .mustahik-detail-page .detail-card-stats .space-y-4 > div:last-child {
    border-bottom: 0;
    padding-bottom: 0;
  }

  .mustahik-detail-page .detail-card-stats .text-sm.font-medium.text-gray-900 {
    font-weight: 700;
    color: #0f172a;
  }

  .mustahik-detail-page .detail-card:nth-of-type(1) { animation-delay: 0.02s; }
  .mustahik-detail-page .detail-card:nth-of-type(2) { animation-delay: 0.08s; }
  .mustahik-detail-page .detail-side .detail-card:nth-of-type(1) { animation-delay: 0.1s; }
  .mustahik-detail-page .detail-side .detail-card:nth-of-type(2) { animation-delay: 0.14s; }

  @keyframes mustahikFadeUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 1024px) {
    .mustahik-detail-page .detail-side .detail-card {
      position: static;
      top: auto;
    }
  }

  @media (max-width: 768px) {
    .mustahik-detail-page {
      padding-top: 0.5rem;
      padding-bottom: 1rem;
      padding-left: 0.08rem;
      padding-right: 0.08rem;
    }

    .mustahik-detail-page .detail-hero {
      padding: 1rem;
      margin-bottom: 1rem;
    }

    .mustahik-detail-page .detail-hero .flex.items-center {
      align-items: flex-start;
      gap: 0.75rem;
    }

    .mustahik-detail-page .detail-hero h1 {
      font-size: 1.5rem !important;
      line-height: 1.2;
    }

    .mustahik-detail-page .detail-layout {
      gap: 1rem;
    }

    .mustahik-detail-page .detail-card {
      border-radius: 0.9rem;
    }

    .mustahik-detail-page .detail-card .p-6,
    .mustahik-detail-page .detail-card .px-6.py-4 {
      padding-left: 1rem !important;
      padding-right: 1rem !important;
    }

    .mustahik-detail-page .detail-card .px-6.py-4 {
      padding-top: 0.9rem !important;
      padding-bottom: 0.9rem !important;
    }

    .mustahik-detail-page .detail-main .p-6 > .flex.items-center.mb-6 {
      align-items: flex-start;
      gap: 0.8rem;
    }

    .mustahik-detail-page .detail-main .p-6 > .flex.items-center.mb-6 .ml-6 {
      margin-left: 0 !important;
      min-width: 0;
    }

    .mustahik-detail-page .detail-main .p-6 > .flex.items-center.mb-6 h3 {
      font-size: 1.35rem !important;
      line-height: 1.25;
      overflow-wrap: anywhere;
    }

    .mustahik-detail-page .detail-main .p-6 > .flex.items-center.mb-6 .h-20.w-20,
    .mustahik-detail-page .detail-main .p-6 > .flex.items-center.mb-6 .h-20.w-20 > div {
      width: 3.6rem !important;
      height: 3.6rem !important;
    }
  }

  @media (max-width: 480px) {
    .mustahik-detail-page .detail-hero {
      padding: 0.85rem 0.8rem;
    }

    .mustahik-detail-page .detail-hero h1 {
      font-size: 1.25rem !important;
    }

    .mustahik-detail-page .detail-hero p {
      font-size: 0.86rem !important;
    }

    .mustahik-detail-page .detail-card .p-6,
    .mustahik-detail-page .detail-card .px-6.py-4 {
      padding-left: 0.8rem !important;
      padding-right: 0.8rem !important;
    }

    .mustahik-detail-page .detail-table {
      border-spacing: 0 0.35rem;
    }

    .mustahik-detail-page .detail-table td.whitespace-nowrap,
    .mustahik-detail-page .detail-table th.whitespace-nowrap {
      white-space: normal !important;
    }
  }

  @media (hover: none) and (pointer: coarse) {
    .mustahik-detail-page .detail-card:hover,
    .mustahik-detail-page .detail-card-actions .btn-primary:hover,
    .mustahik-detail-page .detail-card-actions .btn-secondary:hover,
    .mustahik-detail-page .detail-card-actions .btn-danger:hover {
      transform: none;
    }
  }
</style>

<script>
  // Handle delete form submission with SweetAlert2
  document
    .getElementById("deleteForm")
    .addEventListener("submit", function (e) {
      e.preventDefault();

      showDeleteConfirm(
        "<%= mustahik.nama %>",
        "Apakah Anda yakin ingin menghapus data mustahik <%= mustahik.nama %>? Tindakan ini tidak dapat dibatalkan."
      ).then((result) => {
        if (result.isConfirmed) {
          this.submit();
        }
      });
    });
</script>

<%- include('../layouts/footer') %>
